{
  "name": "light-cones-visualization",
  "version": "2.0.0",
  "description": "Visualisation interactive des cônes de lumière relativistes",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 4173",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "docs": "jsdoc -c jsdoc.conf.json",
    "docs:serve": "http-server docs/ -p 8080",
    "type-check": "tsc --noEmit",
    "analyze": "vite-bundle-analyzer",
    "clean": "rimraf dist docs coverage",
    "prepare": "husky install"
  },
  "keywords": [
    "physics",
    "relativity",
    "light-cones",
    "spacetime",
    "visualization",
    "education",
    "interactive",
    "canvas"
  ],
  "author": "Serge Fantino",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/light-cones-visualization.git"
  },
  "bugs": {
    "url": "https://github.com/username/light-cones-visualization/issues"
  },
  "homepage": "https://username.github.io/light-cones-visualization",
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@eslint/js": "^9.0.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "babel-jest": "^29.7.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@core/(.*)$": "<rootDir>/src/core/$1",
      "^@ui/(.*)$": "<rootDir>/src/ui/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/src/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run lint"
    }
  }
}
